<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @categories.each do |categories| %>
  <tr>
    <td><%=h categories.name %></td>
    <td><%=h categories.description %></td>
    <td><%= link_to 'Show', categories %></td>
    <td><%= link_to 'Edit', edit_categories_path(categories) %></td>
    <td><%= link_to 'Destroy', categories, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New categories', new_categories_path %>