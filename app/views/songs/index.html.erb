<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>File size</th>
    <th>Album</th>
    <th>Length</th>
  </tr>

<% @songs.each do |songs| %>
  <tr>
    <td><%=h songs.name %></td>
    <td><%=h songs.file_size %></td>
    <td><%=h songs.album_id %></td>
    <td><%=h songs.length %></td>
    <td><%= link_to 'Show', songs %></td>
    <td><%= link_to 'Edit', edit_songs_path(songs) %></td>
    <td><%= link_to 'Destroy', songs, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New songs', new_songs_path %>